.contact
  flex 1 1 0
  display flex
  flex-direction column
  justify-content center
  align-items center

  font-size 26pt

  i
    width 48px

    text-align center

    &.fa.fa-facebook
      color #3b5998

    &.fa.fa-envelope-o
      color #dd4b39

    &.fa.fa-twitter
      color #4099FF

  a
    color #424242

    &:hover
      text-decoration underline

