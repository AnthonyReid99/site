li.table-row
  .collapsible-header
    display flex
    flex-direction row
    align-items center
    justify-content space-between

    .full-flex
      flex-grow 1

    .table-val
      flex 4 4 0

    .labels
      display flex
      justify-content flex-end
      align-items center

      .label
        margin 0 5px

    .scrollable
      justify-content flex-start
      overflow-y hidden
      overflow-x auto
      padding-bottom 2px


ul.tabs
  margin-bottom 40px

  overflow hidden

.parenthetical
  font-style italic
  color darkgrey

.modal
  .action-buttons
    margin 10px 0

    .float-right
      float: right

.row.low-row
  margin-top: 50px
